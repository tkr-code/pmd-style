<div id="contact" class=" p-4 bg-white">

                    <h3 class="h3 mb-3 ml-3">Contactez moi !</h3>
                    <div class="row mb-3">
                        <div class="col-md-7">
                {{ form_start(form)}}
                                <div class="form-row mb-3 mx-3">
                                    <div class="form-group col-md-12">
                                        <label for="user"><i class="fa fa-user" aria-hidden="true"></i> Nom et prénom</label>
                                         {{form_widget(form.name)}}
                                        {# <input type="text" name="user" class="form-control" placeholder="Prénom et nom"> #}
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="email"><i class="fa fa-envelope-open" aria-hidden="true"></i> Email</label>
                                        {{form_widget(form.email)}}
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="email"> <i class="fas fa-phone-alt" aria-hidden="true"></i> Telephone</label>
                                        {{form_widget(form.phone_number)}}
                                    </div>
                                    <div class="form-group col-12 col-md-12">
                                        <label for="message"></label>
                                        {{form_widget(form.message)}}
                                    </div>
                                    <button type="submit" class="btn btn-success mx-auto d-block">Envoyer</button>
                                </div>
                {{form_widget(form)}}

                            {{ form_end(form)}}
                        </div>
                        <div class="col-md-5">
                            <div class="row mx-3">
                                <dt class="col-12">Email</dt>
                                <dd class="col-12">{{cv.email}} </dd>
                                <dt class="col-12">Téléphone</dt>
                                <dd class="col-12">{{cv.tel}} </dd>
                                <dt class="col-12">Adresse</dt>
                                <dd class="col-12">{{cv.adresse}} </dd>
                            </div>
                        </div>
                    </div>
                </div>
{% extends 'admin/base.html.twig' %}

{% block title %}Cv {% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Poste</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.description }}</td>
                <td>{{ cv.poste }}</td>
                <td>{{ cv.email }}</td>
                <td>{{ cv.adresse }}</td>
                <td>{{ cv.tel }}</td>
                <td>
                    <a href="{{ path('admin_cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('admin_cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_cv_new') }}">Create new</a>
{% endblock %}

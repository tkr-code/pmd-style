{% extends 'admin/base.html.twig' %}

{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}Edit Tache
{% endblock %}

{% block body %}
	<h1>Edit Tache</h1>
	<div class="card card-outline card-success">
		<div class="card-header">
			<h5>Modification de la tache :
				{{tache.designation}}</h5>
		</div>
		<div class="card-body">
			{{form_start(form)}}
			<div class="row">
				<div class="col-md-12 col-lg-12 col-12">
					{{form_row(form.designation)}}
					{{form_row(form.description)}}
					{{form_row(form.etat)}}
					{{form_row(form.dateAchevement)}}
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 col-lg-12 col-12 text-right">
					{{btn.update()}}
				</div>
			</div>
			{{form_end(form)}}
		</div>
		<div class="card-footer">
			{{link.back(path('collaborateur_edit',{'id':tache.collaborateur.id}))}}
		</div>
	</div>
{% endblock %}

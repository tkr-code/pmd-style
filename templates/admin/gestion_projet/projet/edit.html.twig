{% extends 'admin/base.html.twig' %}

{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}Edit Projet
{% endblock %}

{% block body %}
	<h1>Edition du Projet</h1>
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-xm-12">
			<div class="card card-outline card-success">
				<div class="card-header"></div>
				{{form_start(form)}}
				<div class="card-body">
					<div class="row">
						<div class="col-md-6">
							{{form_row(form.designation)}}
							{{form_row(form.description)}}
							{{form_row(form.type)}}
							{{form_row(form.etat)}}
						</div>
						<div class="col-md-6">
							{{form_row(form.dateDebut)}}
							{{form_row(form.dateFinPrevu)}}
							{{form_row(form.dateFinRealisation)}}
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12 text-right">
							{{btn.update()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('projet_show',{'id':projet.id}),'Projet')}}
					{{link.back(path('projet_index'),'Liste des Projets')}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

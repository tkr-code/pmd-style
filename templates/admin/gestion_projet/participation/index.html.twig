{% extends 'base.html.twig' %}

{% block title %}Participation index{% endblock %}

{% block body %}
    <h1>Participation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Present</th>
                <th>Absent</th>
                <th>DateTravail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td>{{ participation.id }}</td>
                <td>{{ participation.present ? 'Yes' : 'No' }}</td>
                <td>{{ participation.absent ? 'Yes' : 'No' }}</td>
                <td>{{ participation.dateTravail ? participation.dateTravail|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('admin_gestion_projet_participation_show', {'id': participation.id}) }}">show</a>
                    <a href="{{ path('admin_gestion_projet_participation_edit', {'id': participation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_gestion_projet_participation_new') }}">Create new</a>
{% endblock %}

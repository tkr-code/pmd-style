{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter un Fichier{% endblock %}

{% block body %}
    <h1>Ajouter un Fichier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Version</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application_fichier in application_fichiers %}
            <tr>
                <td>{{ application_fichier.id }}</td>
                <td>{{ application_fichier.nom }}</td>
                <td>{{ application_fichier.version }}</td>
                <td>
                    <a href="{{ path('app_admin_application_fichier_show', {'id': application_fichier.id}) }}">show</a>
                    <a href="{{ path('app_admin_application_fichier_edit', {'id': application_fichier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_application_fichier_new') }}">Create new</a>
{% endblock %}

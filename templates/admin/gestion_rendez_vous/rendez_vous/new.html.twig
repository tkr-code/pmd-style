{% extends 'admin/base.html.twig' %}

{% import "macros/link.html.twig" as link %}
{% import "macros/button.html.twig" as btn %}

{% block title %}New RendezVous
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12">
			<div class="card card-outline card-primary">
				<div class="card-header">
					Ajout  du Rendez-Vous pour le client
                     <b class="text-danger">{{client.personneGestion.getFullName}}</b>
                     de la société <b class="text-danger">{{client.societe}}</b>
				</div>
				{{form_start(form)}}
				<div class="card-body">
					{{form_row(form.dateRdv)}}
					{{form_row(form.lieu)}}
					{{form_row(form.heure)}}
					{{form_row(form.objet)}}
					{{form_row(form.description)}}
					<div class="row">
						<div class="col-12">
                        {{btn.save()}}
                        </div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('gestion_rendez_vous_client_index'),'Vos  rendez-vous')}}
					{{link.back(path('gestion_rendez_vous_client_show',{'id':client.id}),'Voir le rendez-vous')}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

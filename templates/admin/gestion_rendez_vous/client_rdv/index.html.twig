{% extends 'admin/base.html.twig' %}

{% block title %}Rendez-vous
{% endblock %}

{% import "macros/table.html.twig" as table %}
{% import "macros/head.html.twig" as head %}
{% import "macros/foot.html.twig" as foot %}
{% import "macros/breadcrumb.html.twig" as utils %}
{% import "macros/alertes.html.twig" as alerte %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}
{% import "macros/dataTable.html.twig" as dataTable %}

{% block head %}
	{{ dataTable.css() }}
{% endblock %}

{% block foot %}
	{{ dataTable.js() }}
{% endblock %}

{% block body %}
	{% for item in app.flashes('success') %}
		{{alerte.alert(item,'success')}}
	{% endfor %}

	<div class="row-mb-3">
		<div class="col-lg-12 col-12 col-md-12">
			<div class="container-fluid">
				<div class="row mb-3">
					{{link.add(path('gestion_rendez_vous_client_new'))}}
				</div>
			</div>

			<div class="card card-outline card-primary">
				<div class="card-header">
					Tous Vos Rendez-vous ici !
				</div>
				<div class="card-body">
					<table class="table" id="table-2">
						<thead>
							<tr>
								<th>Nom & Prenom</th>
								<th>Titre</th>
								<th>Email</th>
								<th>Societe</th>
								<th>Ville</th>
								<th>Pays</th>
								<th>Total RDV</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for client_r_d_v in client_r_d_vs %}
								<tr>
									<td>{{ client_r_d_v.personneGestion.getFullName }}</td>
									<td>{{ client_r_d_v.personneGestion.titre }}</td>
									<td>{{ client_r_d_v.personneGestion.email }}</td>
									<td>{{ client_r_d_v.societe }}</td>
									<td>{{ client_r_d_v.ville }}</td>
									<td>{{ client_r_d_v.pays }}</td>
									<td>
                                        {% if client_r_d_v.rendezVous|length == null %}
                                            <b class="text-danger">
											    {{ client_r_d_v.rendezVous|length  }} 
                                            </b> rendez-vous | {{link.iconAdd(path('gestion_rendez_vous_new',{'id':client_r_d_v.id}))}}
                                            
                                        {% else %}
                                            <b class="text-danger">
											{{ client_r_d_v.rendezVous|length  }}
                                        </b> rendez-vous | {{link.iconAdd(path('gestion_rendez_vous_new',{'id':client_r_d_v.id}))}}
                                        {% endif %}
									</td>
									<td>
                                        {{link.show(path('gestion_rendez_vous_client_show', {'id': client_r_d_v.id}))}}
                                        {{link.iconEdit(path('gestion_rendez_vous_client_edit', {'id': client_r_d_v.id}))}}
                                        <button type="button" class="btn delete_client"
                                        data-delete="{{client_r_d_v.id}}"
                                        data-path="{{path('gestion_rendez_vous_client_delete',{'id':client_r_d_v.id})}}"
                                        ><i class="fas fa-trash-alt text-danger"></i></button>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="card-footer"></div>
			</div>
		</div>
	</div>


{% endblock %}

{% block javascripts %}
	{{ dataTable.script('#table-1') }}
	{{ dataTable.script('#table-2') }}
	{{ dataTable.script('#table-3') }}

     <script>
        $(document).ready(function(){
            $(document).on('click','.delete_client',function(){
                let id_del = $(this).data('delete');
                let path = $(this).data('path');

                Swal.fire({
                    title: 'Etes vous Sure ?',
                    text: "Attention, la suppression est irreversible!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Oui, Supprimer !',
                    cancelButtonText: 'Annuler !',
                    }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url:path,
                            method:'POST',
                            dataType:'JSON',
                            data:{
                                suppr_client:'zimbissa_yawou',
                                id_supr:id_del
                            },
                            success:function(data){
                                if(data == 'success'){
                                    Swal.fire(
                                        'Suppression reussie!',
                                        'Votre rendez vous a été supprimé avec succès.',
                                        'success'
                                    );
                                    location.reload();
                                }else{
                                    swalWithBootstrapButtons.fire(
                                        'Suppression Impossible',
                                        'Impossible de supprimer ce rendez-vous, veuillez réessayer plus tard :)',
                                        'error'
                                    );
                                }
                            }
                        })
                        
                    }
                });
            });
        });
    </script>
{% endblock %}

{% extends 'admin/base.html.twig' %}

{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}Edit ClientRDV
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-col-12">
			<div class="card card-outline card-success">
				<div class="card-header">
					Les Informations du client
					<b class="text-danger">{{client.personneGestion.getFullName}}</b>
				</div>
				{{form_start(form)}}
				<div class="card-body">
					<div class="row">
						<div class="col-md-6">
							{{form_row(form.nom)}}
							{{form_row(form.prenom)}}
							{{form_row(form.titre)}}
							{{form_row(form.email)}}
							{{form_row(form.adresse)}}
						</div>
						<div class="col-md-6">
							{{form_row(form.societe)}}
							{{form_row(form.ville)}}
							{{form_row(form.pays)}}
							{{form_row(form.phone)}}
						</div>
					</div>
					<div class="row">
						<div class="col-12 text-right">
							{{btn.update()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('gestion_rendez_vous_client_index'),'Vos Rendez-vous')}}
					{{link.back(path('gestion_rendez_vous_client_show',{'id':client.id}))}}
				</div>
			</div>
		</div>
	{% endblock %}

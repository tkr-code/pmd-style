{% extends 'admin/base.html.twig' %}

{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}New CentreFormation
{% endblock %}

{% block body %}
	<h1>Create new CentreFormation</h1>
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-xm-12">
			<div class="card card-outline card-primary">
				<div class="card-header"></div>
				{{form_start(form)}}
				<div class="card-body">
					<div class="row">
						<div class="col-md-6">
							<h3 class="text-primary font-italic font-weight-light">Les Informations du Responsable du Centre</h3>
							{{form_row(form.personneGestion.nom)}}
							{{form_row(form.personneGestion.prenom)}}
							{{form_row(form.personneGestion.titre)}}
							{{form_row(form.personneGestion.email)}}
							{{form_row(form.personneGestion.adresse)}}
							{{form_row(form.personneGestion.phone)}}
							{{form_row(form.personneGestion.avatar)}}
						</div>
						<div class="col-md-6">
							<h3 class="text-primary font-italic font-weight-light">Les Informations Relatives du Centre</h3>
							{{form_row(form.designation)}}
							{{form_row(form.sigle)}}
							{{form_row(form.description)}}
							{{form_row(form.specialite)}}
							{{form_row(form.email)}}
							{{form_row(form.phone)}}
							{{form_row(form.adresse)}}
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							{{btn.save()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('centre_formation_index'),'Tous Les Centres')}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

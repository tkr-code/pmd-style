{% extends 'admin/base.html.twig' %}

{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}
{% import "macros/alertes.html.twig" as alerte %}


{% block title %}Edit CentreFormation
{% endblock %}

{% block body %}
{% for item in app.flashes('success') %}
    {{alerte.alert(item,'success')}}
{% endfor %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12">
			<div class="card card-outline card-success">
				<div class="card-header">
					Informations du centre de Formation
					<b class="text-danger">{{centre_formation.designation}}</b>
				</div>
				{{form_start(form)}}
				<div class="card-body">
					<div class="row">
						<div class="col-lg-6 col-md-6 col-6 col-sm-6">
							<h3 class="mb-5 text-success">Informations du responsable du centre</h3>
							{{form_row(form.personneGestion.nom)}}
							{{form_row(form.personneGestion.prenom)}}
							{{form_row(form.personneGestion.titre)}}
							{{form_row(form.personneGestion.email)}}
							{{form_row(form.personneGestion.adresse)}}
							{{form_row(form.personneGestion.phone)}}
							{{form_row(form.personneGestion.avatar)}}
						</div>
						<div class="col-lg-6 col-md-6 col-6 col-sm-6">
							<h3 class="mb-5 text-success">Informations Complete du centre</h3>
							{{form_row(form.designation)}}
							{{form_row(form.sigle)}}
							{{form_row(form.description)}}
							{{form_row(form.specialite)}}
							{{form_row(form.email)}}
							{{form_row(form.phone)}}
							{{form_row(form.adresse)}}

						</div>
					</div>
					<div class="row">
						<div class="col-lg-12 col-sm-12 col-12 text-right">
							{{btn.update()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('centre_formation_index'),'Tous Les Centres')}}
					{{link.back(path('centre_formation_show',{'id':centre_formation.id}),'Retour Ã  la visualisation')}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

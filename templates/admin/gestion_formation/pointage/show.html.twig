{% extends 'admin/base.html.twig' %}

{% import "macros/link.html.twig" as link %}

{% block title %}Pointage
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-xm-12 col-12">
			<div class="card card-outline card-dark">
				<div class="card-header"></div>
				<div class="card-body">
					<table class="table">
						<tbody>
							
							<tr>
								<th>NombreHeureDispense</th>
								<td>{{ pointage.nombreHeureDispense }}</td>
							</tr>
							<tr>
								<th>ContenuDispense</th>
								<td>{{ pointage.contenuDispense }}</td>
							</tr>
							<tr>
								<th>DatePointage</th>
								<td>{{ pointage.datePointage ? pointage.datePointage|date('Y-m-d') : '' }}</td>
							</tr>
							<tr>
								<th>EsSupplementaire</th>
								<td>{{ pointage.esSupplementaire ? 'Yes' : 'No' }}</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="card-footer">
                    {{link.back(path('pointage_index',{'id':centre.id,'id_forma':formation.id}),'Tous Les Pointages')}}
                    {{link.edit(path('pointage_edit', {'id': pointage.id}))}}
                </div>
			</div>
		</div>
	</div>
{% endblock %}

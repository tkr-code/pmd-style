{% extends 'base.html.twig' %}

{% block title %}Pointage index{% endblock %}

{% block body %}
    <h1>Pointage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NombreHeureDispense</th>
                <th>ContenuDispense</th>
                <th>DatePointage</th>
                <th>EsSupplementaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pointage in pointages %}
            <tr>
                <td>{{ pointage.id }}</td>
                <td>{{ pointage.nombreHeureDispense }}</td>
                <td>{{ pointage.contenuDispense }}</td>
                <td>{{ pointage.datePointage ? pointage.datePointage|date('Y-m-d') : '' }}</td>
                <td>{{ pointage.esSupplementaire ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('admin_gestion_formation_pointage_show', {'id': pointage.id}) }}">show</a>
                    <a href="{{ path('admin_gestion_formation_pointage_edit', {'id': pointage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_gestion_formation_pointage_new') }}">Create new</a>
{% endblock %}

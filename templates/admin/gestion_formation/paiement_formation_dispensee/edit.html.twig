{% extends 'admin/base.html.twig' %}

{% import "macros/link.html.twig" as link %}
{% import "macros/button.html.twig" as btn %}

{% block title %}Edit PaiementFormationDispensee
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12">
			<div class="card card-outline card-success">
				<div class="card-header">
					Modification du paiement concernant le module
					<b class="text-danger">{{formation_dispensee.module.abreviation}}</b>
					pour la     classe
					<b class="text-danger">{{classe.abreviation}}</b>
					de niveau
					<b class="text-danger">{{classe.niveauEtude}}</b>
					dans le centre de formation
					<b class="text-danger">
						{{centre_formation.sigle}}
					</b>
					pour un volume horaire de
					<b class="text-danger">
						{{formation_dispensee.volumeHoraire}}
						H
					</b>
					Ã  la valeur
					<b class="text-danger">
						{{formation_dispensee.valeurHeure|number_format(0, ',', ' ')}}
					</b>
					F l'heure
				</div>
				{{form_start(form)}}
				<div class="card-body">
					{{form_row(form.montant)}}
					{{form_row(form.datePaiement)}}
					{{form_row(form.justification)}}
                    <div class="row">
                        <div class="col text-right">
                        {{btn.update()}}
                        </div>
                    </div>

				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('centre_formation_show',{'id':centre_formation.id}),'Voir le Centre')}}
					{{link.back(path('paiement_formation_show',{'id':paiement_formation_dispensee.id}),'Voir le Paiement')}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

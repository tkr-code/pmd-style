{% extends 'admin/base.html.twig' %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}New Paiement
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12">
			<div class="card card-outline card-success">
				<div class="card-header">
					<div class="row">
						<div class="col-md-6">
							Paiement conercenant le Module
							<b class="text-danger">{{formation.module.abreviation}}</b>
							Pour la classe
							<b class="text-danger">{{classe.abreviation}}</b>
                            <br>
                            vous effectuez <b class="text-danger">{{heure_supplemenataire}}</b> H supplementaire(s)
						</div>
						<div class="col-md-6 text-right">
							Dispensé dans le centre
							<b class="text-success">{{centre_formation.designation}}</b> <br>
							Sur un volume Horaire de
							<b class="text-danger">{{formation.volumeHoraire}}</b>
							H, &nbsp;
							vous avez effectuez <b class="text-danger">{{heure_effectuee}} H</b>,&nbsp;
                            L'Heure Payée à <b class="text-danger">{{formation.valeurHeure|number_format(0, ',', ' ')}}</b> F
						</div>
					</div>
				</div>
				{{form_start(form)}}
				<div class="card-body">
					{{form_row(form.montant)}}
					{{form_row(form.justification)}}
					{{form_row(form.datePaiement)}}
					<div class="row">
						<div class="col-lg-12 col-md-12">
							{{btn.save()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('centre_formation_show',{'id':centre_formation.id}),'Annuler')}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

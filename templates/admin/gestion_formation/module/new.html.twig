{% extends 'admin/base.html.twig' %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}New Module
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12 col-xm-12">
			<div class="card card-outline card-primary">
				<div class="card-header">
					Cr√©ation d'un nouveau Module
				</div>
				{{form_start(form)}}
				<div class="card-body">
					{{form_row(form.designation)}}
					{{form_row(form.abreviation)}}
					{{form_row(form.description)}}
                    {{btn.save()}}
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('module_index'),'Tous Les Modules')}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

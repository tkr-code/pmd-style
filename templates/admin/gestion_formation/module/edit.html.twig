{% extends 'admin/base.html.twig' %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}Edit Module
{% endblock %}

{% block body %}
	<h1>Edit Module</h1>
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-xm-12 col-12">
			<div class="card card-outline card-success">
				<div class="card-header">
					Modification du module &nbsp;
					{{module.abreviation}}
				</div>
				{{form_start(form)}}
				<div class="card-body">
					{{form_row(form.designation)}}
					{{form_row(form.abreviation)}}
					{{form_row(form.description)}}
					<div class="row">
						<div class="col-lg-12 text-right">
							{{btn.update()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('module_index'),'Tous Les Modules')}}
					{{link.back(path('module_show',{'id':module.id}),'Le Module')}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

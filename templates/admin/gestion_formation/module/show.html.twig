{% extends 'admin/base.html.twig' %}

{% import "macros/link.html.twig" as link %}

{% block title %}Module
{% endblock %}

{% block body %}
	<h1>Visualisation du Module</h1>
	<div class="row mb-3">
		<div class="col-lg-12">
			<div class="card card-outline card-dark">
				<div class="card-body">
					<table class="table">
						<tbody>
							<tr>
								<th>Designation</th>
								<td>{{ module.designation }}</td>
							</tr>
							<tr>
								<th>Abreviation</th>
								<td>{{ module.abreviation }}</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ module.description }}</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="card-footer">
					{{link.back(path('module_index'),'Tous Les Modules')}}
					{{link.edit(path('module_edit', {'id': module.id}))}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>NumeroNinea</th>
                <th>DomaineActivite</th>
                <th>Adresse</th>
                <th>Phone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.designation }}</td>
                <td>{{ entreprise.numeroNinea }}</td>
                <td>{{ entreprise.domaineActivite }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.phone }}</td>
                <td>{{ entreprise.email }}</td>
                <td>
                    <a href="{{ path('admin_gestion_formation_entreprise_show', {'id': entreprise.id}) }}">show</a>
                    <a href="{{ path('admin_gestion_formation_entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_gestion_formation_entreprise_new') }}">Create new</a>
{% endblock %}

{% extends 'admin/base.html.twig' %}

{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}Edit ClasseFormation
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12">
			<div class="card card-outline card-success">
				<div class="card-header">
					Information de la classe
					<b class="text-danger">{{classe_formation.abreviation}}</b>
					du centre de formation
					<b class="text-danger">{{classe_formation.centreFormation.designation}}</b>
				</div>
				{{form_start(form)}}
				<div class="card-body">
					{{form_row(form.designation)}}
					{{form_row(form.abreviation)}}
					{{form_row(form.nombreEtudiant)}}
					{{form_row(form.niveauEtude)}}
					<div class="row">
						<div class="col-lg-12 col-md-12 text-right">
							{{btn.update()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('classe_formation_show',{'id':classe_formation.centreFormation.id,'id_cla':classe_formation.id}),'Voir La classe')}}
				</div>
			</div>
		</div>
	</div>


{% endblock %}

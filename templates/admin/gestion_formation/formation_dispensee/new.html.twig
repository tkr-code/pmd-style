{% extends 'admin/base.html.twig' %}

{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% block title %}New FormationDispensee
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12 col-xm-12">
			<div class="card card-outline card-primary">
				<div class="card-header">
					<h3>
						Ajout d'une nouvelle formation dans l'Etablissement
						<b class="text-danger">{{centre_formation.sigle}}</b>
					</h3>
				</div>
				{{form_start(form)}}
				<div class="card-body">
					<div class="row">
						<div class="col-md-6">
							<h3 class="text-primary font-italic font-weight-light">Les Informations Classe</h3>
							{{form_row(form.module)}}
							{{form_row(form.classe.designation)}}
							{{form_row(form.classe.abreviation)}}
							{{form_row(form.classe.niveauEtude)}}
						</div>
						<div class="col-md-6">
							<h3 class="text-primary font-italic font-weight-light">Les Informations Taux Horaires</h3>
							{{form_row(form.volumeHoraire)}}
							{{form_row(form.valeurHeure)}}
							{{form_row(form.dateDebut)}}
							{{form_row(form.classe.nombreEtudiant)}}
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							{{btn.save()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('centre_formation_index'),'Tous Les Centres')}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'admin/base.html.twig' %}

{% block title %}Caisse{% endblock %}

{% block body %}
<div class="card card-outline card-primary">
    <div class="card-body">
        <a class="btn btn-primary mb-2" href="{{ path('admin_caisse_new') }}">Create new</a>
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <thead>
                        <th>Code</th>
                        <th>Montant</th>
                        <th>Total</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                        {% for caisse in caisses %}
                        <tr>
                            <td>{{ caisse.code }}</td>
                            <td>{{ caisse.total }}</td>
                            <td>{{ caisse.type }}</td>
                            <td>
                                <a href="{{ path('admin_caisse_show', {'id': caisse.id}) }}">show</a>
                                <a href="{{ path('admin_caisse_edit', {'id': caisse.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td colspan="2" class="text-center font-weight-bold">Total</td>
                        <td>{{ montantTotal|number_format(0, '', ' ') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table">
                    <thead>
                        <th></th>
                        <th></th>
                        <th></th>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'admin/base.html.twig' %}

{% block title %}Listes des Contact{% endblock %}

{% block body %}
    <div class="card card-outline card-primary">
        <div class="card-header">
            <div class="card-title">
                Listes des Contacts
            </div>
        </div>
        <div class="card-body">
            <a class="btn btn-primary" href="{{ path('app_admin_contact_new') }}">Create new</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Tel</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.id }}</td>
                        <td>{{ contact.nom }}</td>
                        <td>{{ contact.tel }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.message }}</td>
                        <td>
                            <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}">show</a>
                            <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

{% endblock %}

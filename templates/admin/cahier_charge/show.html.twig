{% extends 'admin/base.html.twig' %}
{% import "macros/link.html.twig" as links %}

{% block title %}Cahier de charge{% endblock %}

{% block body %}
<div class="card card-outline card-primary">
    <div class="card-header">
        <h3>Cahier de Charge</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ cahier_charge.id }}</td>
                </tr>
                <tr>
                    <th>FullName</th>
                    <td>{{ cahier_charge.fullName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ cahier_charge.email }}</td>
                </tr>
                <tr>
                    <th>Tel</th>
                    <td>{{ cahier_charge.tel }}</td>
                </tr>
                {% for item in cahier_charge.reponses %}
                    <tr>
                        <th>{{ item.question.number ~ ') ' ~ item.question.question }}</th>
                        <td>{{ item.reponse }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div>
            {{ links.back(path('admin_cahier_charge_index')) }}
            {{ links.edit(path('admin_cahier_charge_edit', {'id': cahier_charge.id})) }}
            {{ include('admin/cahier_charge/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}

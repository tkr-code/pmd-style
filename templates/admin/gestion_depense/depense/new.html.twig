{% extends 'admin/base.html.twig' %}

{% import "macros/link.html.twig" as link %}
{% import "macros/button.html.twig" as btn %}

{% block title %}New Depense
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12">
			<div class="card card-outline card-primary">
				<div class="card-header">
					Ajout d'une nouvelle Depense
				</div>
				{{form_start(form)}}
				<div class="card-body">
					<div class="row">
						<div class="col-lg-6 col-md-6 col-6">
							{{form_row(form.dateEffectue)}}
							{{form_row(form.designation)}}
							{{form_row(form.description)}}
						</div>

						<div class="col-lg-6 col-md-6 col-6">
							{{form_row(form.valeurTotal)}}
							{{form_row(form.lieu)}}
						</div>

					</div>
					<div class="row">
						<div class="col-md-6">
							{{btn.save()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('gestion_depense_index'))}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

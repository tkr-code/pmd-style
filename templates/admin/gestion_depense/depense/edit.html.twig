{% extends 'admin/base.html.twig' %}

{% import "macros/link.html.twig" as link %}
{% import "macros/button.html.twig" as btn %}

{% block title %}Edit Depense
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col-lg-12 col-md-12 col-12">
			<div class="card card-outline card-success">
				<div class="card-header">
					Depense concernant
					<b class="text-danger">{{depense.designation}}</b>
					pour une valeur de
					<b class="text-danger">{{depense.valeurTotal}}</b>
					effectuée à l'endroit
					<b class="text-danger">{{depense.lieu}}</b>
                    Le <b class="text-danger">{{depense.dateEffectue|date_format_fr('Y-m-d')}}</b>
				</div>
				{{form_start(form)}}
				<div class="card-body">
					<div class="row">
						<div class="col-lg-6 col-md-6 col-6">
							{{form_row(form.dateEffectue)}}
							{{form_row(form.designation)}}
							{{form_row(form.description)}}
						</div>

						<div class="col-lg-6 col-md-6 col-6">
							{{form_row(form.valeurTotal)}}
							{{form_row(form.lieu)}}
						</div>

					</div>
					<div class="row">
						<div class="col text-right">
							{{btn.update()}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
				<div class="card-footer">
					{{link.back(path('gestion_depense_index'),'Toutes Vos Dépenses')}}
					{{link.back(path('gestion_depense_show',{'id':depense.id}))}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}

{% extends 'admin/base.html.twig' %}

{% block title %}Amelioration index{% endblock %}

{% block body %}
    <h1>Amelioration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for amelioration in ameliorations %}
            <tr>
                <td>{{ amelioration.id }}</td>
                <td>{{ amelioration.type }}</td>
                <td>{{ amelioration.description }}</td>
                <td>
                    <a href="{{ path('app_admin_amelioration_show', {'id': amelioration.id}) }}">show</a>
                    <a href="{{ path('app_admin_amelioration_edit', {'id': amelioration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_amelioration_new') }}">Create new</a>
{% endblock %}

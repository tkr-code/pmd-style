{% macro etat(etat) %}
    {% if etat == 'En cour' %}
        <span class="badge m-1 font-weight-bold badge-primary">{{etat}}</span>
        {% elseif etat == 'Annuller' %}
        <span class="badge m-1 font-weight-bold badge-danger">{{etat}}</span>
    {% endif %}
{% endmacro %}

{% macro cahierCahrge(status) %}
    {% if status == 'En attente' %}
        <span class="badge badge-info">{{status}}</span>
    {% elseif etat == 'Valider' %}
        <span class="badge badge-success">{{status}}</span>
    {% elseif etat == 'Annuller' %}
        <span class="badge badge-danger">{{status}}</span>
    {% else %}
        <span class="badge">{{status}}</span>
    {% endif %}
{% endmacro %}

{% macro articleLabel(label,circle = false) %}
    {% if label == 'New' %}
        <span class="product-label {{ circle ? 'label-circle':'' }} label-new">{{'New'|trans}}</span>
        {% elseif label == 'Top' %}
        <span class="product-label {{ circle ? 'label-circle':'' }} label-top">{{'Top'|trans}}</span>
        {% elseif label == 'Out' %}
        <span class="product-label {{ circle ? 'label-circle':'' }} label-out">{{'Stock'|trans}}</span>
    {% endif %}
{% endmacro %}


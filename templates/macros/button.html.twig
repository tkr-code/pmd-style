{# button.html.twig #}
{% macro save() %}
    <button type="submit" class="btn btn-primary">Valider</button>
{% endmacro %}
{% macro edit(title) %}
    <button type="submit" class="btn btn-success"><i class="fas fa-pencil-alt"></i></button>
{% endmacro %}

{% macro delete(text) %}
    <button type="submit" class="btn"><i class="fas fa-trash-alt text-danger"></i> {{ text|default('') }}</button>
{% endmacro %}

{% macro order(state) %}
    {% set type = '' %}
    {% set title = '???' %}
    {% if state == 'completed' %}
        {% set  type = 'success' %}
    {% endif %}

    {% if state == 'canceled' %}
        {% set  type = 'danger' %}
    {% endif %}

    {% if state == 'waiting' %}
        {% set  type = 'default' %}
    {% endif %}

    {% if state == 'in progress' %}
        {% set  type = 'info' %}
    {% endif %}

    <button 
            data-toggle="tooltip"
            data-placement="bottom"
            title="{{ title }}" class="btn btn-{{type}} ">   
             {{ state|trans }}
    </button>  
{% endmacro %}
{% macro modal_brut(idModal,modalTitle,modalSize) %}
	<!-- Modal -->
	<!-- Modal large : modal-lg -->
	<!-- Modal extra large : modal-xl -->
	<div class="modal fade" id="{{ idModal|default('modal-default') }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog {{modalSize|default('modal-lg')}}">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">{{ modalTitle|default('Modal title') }}</h5>
					<button type="button" class="btn btn-secondary close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>

				<div class="modal-body">
					<div class="modal-loader">
						<div class="spinner-border text-dark mx-auto" role="status"></div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endmacro %}

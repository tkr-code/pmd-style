
{% macro edit(path) %}
    <a class="btn btn-success " href="{{ path|default('#') }} "><i class="fas fa-pencil-alt"></i> {{'Edit'|trans }}</a>
{% endmacro %}
{% macro manageList(path,text) %}
    <a class="btn btn-success " href="{{ path|default('#') }} "> {{text|default('gerer') }}</a>
{% endmacro %}

{% macro delete(path) %}
    <a class="btn btn-sm btn-danger " href="{{ path }} "><i class="fas fa-trash-alt"></i></a>
{% endmacro %}

{% macro back(path,text) %}
    <a class="btn btn-dark" href="{{ path }} "> <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> {{ text|default('back to list') }} </a>
{% endmacro %}
{% macro add(path,text) %}
    <a class="btn mb-1 btn-lg btn-primary" href="{{ path }} "> {{ text|default('Create') }} <i class="fas fa-plus" aria-hidden="true"></i></a>
{% endmacro %}
{% macro iconAdd(path = '#',title) %}
    <a class="mx-1" data-toggle="tooltip" data-placement="top" title="{{title|default('')}}" href="{{ path }}" ><i class="fas fa-plus text-success"></i></a>
{% endmacro %}
{% macro iconEdit(path = '#') %}
    <a class="mx-1" href="{{ path }}"><i class="fas fa-pencil-alt text-success"></i></a>
{% endmacro %}
{% macro iconMoney(path = '#',text) %}
    <a class="mx-1" data-toggle="tooltip" data-placement="top" title="{{text|default('')}}" href="{{ path }}"><i class="fas fa-funnel-dollar text-success"></i></a>
{% endmacro %}
{% macro show(path = '#') %}
    <a class="mx-1" href="{{ path }}"><i class="fa fa-eye text-dark"></i></a>
{% endmacro %}
{% macro iconPrint(path = '#') %}
    <a class="mx-1" href="{{ path }}"><i class="fas fa-print text-success"></i></a>
{% endmacro %}

